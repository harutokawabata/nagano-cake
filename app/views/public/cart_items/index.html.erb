<div class="container">
  <h2><span>ショッピングカート</span></h2>
  <div style="text-align:right">
    <%= link_to "削除する", items_path(@cart_items), method: :delete, class:"btn btn-danger" %>
  </div>
  <div class="row">
    <table class="table table-bordered" style="margin-top:20px;">
    	<thead>
    		<tr>
    			<th>商品名</th>
    			<th>単価（税込）</th>
    			<th>数量</th>
    			<th>小計</th>
    			<th></th>
    		</tr>
    	</thead>
    	<tbody>
    	  <%# @cart_items.each do |cart_item| %>
    	  <% @cart_items.each do |cart_item| %>
    		<tr>
    		  <%# attachment_image_tag item, :image, format: 'jpeg', size: "160x90" %>
    			<th>
    		  	  <%= attachment_image_tag cart_item.item, :image, format: 'jpeg', size:"40x20" %><%= cart_item.item.name %>
    			</th>
    			<td><%= cart_item.item.price %></td>
    			<td>
    			  <%= form_for(cart_item)  do |f| %>
    			    <%= f.number_field :amount, autofocus: true, size: "4x2"%>
    			    <!--numberかselectを実装する方がいい-->
    			     <%= f.submit '変更', class:"btn btn-primary active" %>
    			  <% end %>
    			</td>
    			<td>
    			  <%= cart_item.item.price * cart_item.amount %>
    			</td>
    			<td>
    			  <div style="text-align: rignt;">
    			   <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class:"btn btn-danger" %>
    			  </div>
    			 </td>
    			 <td>
    		</tr>
    		<% end %>
    	</tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-xs-6" style="text-align: rignt;">
      <%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %>
    </div>
    <div class="col-xs-6">
      <div style="max-width: 252px;">
        <table class="table table-bordered">
        	<thead>
        		<tr>
        			<th>合計金額</th>
        			<th></th>
        		</tr>
        	</thead>
        </table>
      </div>
    </div>
  </div>
  <div class="row" style="text-align:center;">
	  <button type="button" class="btn btn-success btn-lg" disabled="disabled">情報入力に進む(未）</button>
  </div>
</div>