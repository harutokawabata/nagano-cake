<div class="container">
  <h2><span>注文履歴詳細</span></h2>
  <div class="row">
    <div class="col-xs-8">
      <table class="table table-bordered">
      	<tbody>
      	  <%# @order_details.each do |order_detail| %>
      		<tr>
      			<th>注文日</th>
      			<td><%= @order.created_at %></td>
      		</tr>
      		<tr>
      			<th>配送先</th>
      			<td><%= @order.address %></td>
      		</tr>
      		<tr>
      			<th>支払い方法</th>
      			<td><%= @order.payment_method_i18n %></td>
      		</tr>
      		<tr>
      			<th>ステータス</th>
      			<td><%= @order.status_i18n %></td>
      		</tr>
      	</tbody>
      </table>
    </div>
    <div class="col-xs-4">
      <table class="table table-bordered">
      	<tbody>
      		<tr>
      			<th>商品合計</th>
      			<td><%= @order.total_payment - 800 %></td>
      		</tr>
      		<tr>
      			<th>配送料</th>
      			<td><%= @order.shipping_cost %></td>
      		</tr>
      		<tr>
      			<th>ご請求金額</th>
      			<td><%= @order.total_payment %></td>
      		</tr>
      	</tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-10">
      <table class="table table-bordered">
      	<thead>
      		<tr>
      			<th>商品</th>
      			<th>単価税込</th>
      			<th>個数</th>
      			<th>小計</th>
      		</tr>
      	</thead>
      	<tbody>
      	  <% @order_details.each do |order_detail| %>
      		<tr>
      			<th><%= order_detail.item.name %></th>
      			<td><%= order_detail.price %></td>
      			<td><%= order_detail.amount %></td>
      			<td><%= order_detail.amount * order_detail.price %></td>
      		</tr>
      		<% end %>
      	</tbody>
      </table>
    </div>
    </div>
  </div>
</div>
