<div class="container">
  <div class="row">
    <h2><span>配送先登録/一覧</span></h2>
  </div>
  <%= form_with url:addresses_path, method: :post, model:@address, local:true do |f| %>
    <div class="row">
      <div class="col-xs-3">
        <p>郵便番号（ハイフンなし）</p>
      </div>
      <div class="col-xs-4">
        <%= f.text_field :postal_code, autofocus: true %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3">
         <p>住所</p>
      </div>
      <div class="col-xs-4">
        <%= f.text_field :address, autofocus: true %><br>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3">
        <p>宛名</p>
      </div>
      <div class="col-xs-4">
        <%= f.text_field :name, autofocus: true %>
      </div>
    </div>
    <%= f.submit "新規登録", class:"btn btn-success pull-right" %>
  <% end %>
  <div class="row" style="margin-top:100px;">
    <%# if == current.%>
    <table class="table table-bordered">
    	<thead>
    		<tr>
    			<th>郵便番号</th>
    			<th>住所</th>
    			<th>宛名</th>
    			<th></th>
    		</tr>
    	</thead>
    	<tbody>
    	  <% @addresses.each do |address| %>
    		<tr>
    			<th><%= address.postal_code %></th>
    			<td><%= address.address %></td>
    			<td><%= address.name %></td>
    			<td>
    			  <%= link_to '編集する', edit_address_path(address.id), class:"btn btn-primary" %>
    			  <%= link_to '削除する', address_path(address), method: :delete, class:"btn btn-danger"%>
    			</td>
    		</tr>
    		<% end %>
    	</tbody>
    </table>
  </div>
</div>
