<div class="container">
  <div class="row">
    <h2><span>商品一覧</span></h2>
  </div>
  <div class="row">
    <table class="table">
    	<thead>
    		<tr>
    			<th>商品ID</th>
    			<th>商品名</th>
    			<th>税抜き価格</th>
    			<th>ジャンル</th>
    			<th>ステータス</th>
    		</tr>
    	</thead>
    	<tbody>
    	  <%# @items.each do |item| %>
    		<tr>
    			<th><%# item.id %></th>
    			<td><%# item.name %></td>
    			<td><%# item.price %></td>
    			<td><%# genre.name %></td>
    			<td><%# item.is_active %></td>
    		</tr>
    		<%# end %>
    	</tbody>
    </table>
  </div>
</div>