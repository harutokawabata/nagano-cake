<div class="container">
  <h2><span>商品詳細</span></h2>
  <div class="row">
    <div class="col-xs-4">
      <p>写真表示</p>
      <%= attachment_image_tag(@item, :image, format: 'jpeg', size: "100x100") %>
    </div>
    <div class="col-xs-8">

      <label>商品名</label>
      <%= @item.name %><br>
      <label>商品説明</label>
      <%= @item.introduction %><br>
      <label>ジャンル</label>
      <%= @item.genre.name %><br>
      <label>税込価格（税抜き価格）</label>
      <%= @item.price %>(<%= @item.price * 1.1 %>) 円<br>
      <label>販売ステータス</label>
      <% if @item.is_active == true %>
        <p>販売中</p>
      <% else %>
        <p>うってねーよ</p>
      <% end %>
    </div>
  </div>
  <!--<div class="btn-right", style="text-align:right;">-->
    <!--<button class="btn btn-primary">-->
      <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-primary pull-right" %>
      <!--</button>-->
  <!--</div>-->
</div>