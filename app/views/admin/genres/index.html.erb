<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2><span>ジャンルの一覧・追加</span></h2>
    </div>
    <div class="row">
      <div class="col-xs-2">
        <h4>ジャンル</h4>
      </div>
      <div class="col-xs-4">
        <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
          <%= f.text_field :name %>
           <%= f.radio_button :is_active, :true %>
           <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
           <%= f.radio_button :is_active, :false %>
           <%= f.label :is_active, "無効", {value: :false, style: "display: inline-block;"} %>
          <%= f.submit "変更を保存" %>
        <% end %>
      </div>

    </div>
    <div class="row">
      <table class="table">
      	<thead>
      		<tr>
      			<th>ジャンル</th>
      			<th>状態</th>
      			<th></th>
      		</tr>
      	</thead>
      	<tbody>
      	  <% @genres.each do |genre| %>
      		<tr>
      			<th><%= genre.name %> </th>
      			<td>
      			  <% if genre.is_active == true %>
      			    <p>有効</p>
      			  <% else %>
      			    <p>無効</p>
      			  <% end %>
      			  </td>
      			<td><%= link_to '編集する', edit_admin_genre_path(genre.id) %></td>
      		</tr>
      		<% end %>
      	</tbody>
      </table>
    </div>
  </div>
</div>


