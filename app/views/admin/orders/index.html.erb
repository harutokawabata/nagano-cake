<div class="container">
  <div class="row">
    <h2><span>注文履歴一覧</span></h2>
  </div>
  <div class="row">
    <table class="table table-bordered">
    	<thead>
    		<tr>
    			<th>購入日時</th>
    			<th>購入者</th>
    			<th>注文個数</th>
    			<th>注文ステータス</th>
    		</tr>
    	</thead>
    	<tbody>
    	  <% @orders.each do |order| %>
    	  <% amount = 0 %>
    	  <% order.order_details.each do |order_detail| %>
    	    <% amount += order_detail.amount %>
    	  <% end %>
    		<tr>
    			<th><%=link_to order.created_at, admin_order_path(order.id) %></th>
    			<td><%= order.customer.last_name + order.customer.first_name %></td>
    			<td><%= order.order_details[0].amount %></td>
    			<td><%= order.status_i18n %></td>
    		</tr>
    		<% end %>
    	</tbody>
    </table>
  </div>
</div>