<div class="container">
  <div class="row">
    <h2><span>注文履歴一覧</span></h2>
  </div>
  <div class="row">
    <table class="table table-bordered">
    	<thead>
    		<tr>
    			<th>購入日時</th>
    			<th>購入者</th>
    			<th>注文個数</th>
    			<th>注文ステータス</th>
    		</tr>
    	</thead>
    	<tbody>
    	  <% @order_details.each do |order_detail| %>
    		<tr>
    			<th><%=link_to order_detail.created_at, admin_order_path(order_detail.id) %></th>
    			<td><%= order_detail.item.name %></td>
    			<td><%= order_detail.amount %></td>
    			<td><%= order_detail.order.status_i18n %></td>
    		</tr>
    		<% end %>
    	</tbody>
    </table>
  </div>
</div>