      	<tbody>
      		<tr>
      			<th>購入者</th>
      			<td><%= @order.name %></td>
      		</tr>
      		<tr>
      		  <th>配送先</th>
      			<td><%= @order.address %></td>
      		</tr>
      		<tr>
      		  <th>支払方法</th>
      			<td><%= @order.payment_method_i18n %></td>
      		</tr>
      		<tr>
      		  <th>注文ステータス</th>
      			<td>
      			  <%= form_with url:admin_order_path(@order.id), method: :patch, model:@order, local:true do |f| %>
      			    <%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
                <!--<%# f.select :status, [["着手不可", 0], ["入金待ち", 1], ["入金確認", 2], ["発想準備中", 3], ["発送済み", 4]], include_blank: "選択してください" %>-->
