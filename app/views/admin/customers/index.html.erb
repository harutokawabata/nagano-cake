<div class="container">
  <div class="row">
    <h2><span>会員一覧</span></h2>
  </div>
  <div class="row">
    <table class="table">
    	<thead>
    		<tr>
    			<th>会員ID</th>
    			<th>氏名</th>
    			<th>メールアドレス</th>
    			<th>ステータス</th>
    		</tr>
    	</thead>
    	<tbody>
    	  <% @customers.each do |customer| %>
    		<tr>
    			<th><%= customer.id %></th>
    			<td><%= customer.first_name %><%= customer.last_name %></td>
    			<td><%= customer.email %></td>
    			<td><%= customer.is_deleted %></td>
    		</tr>
    		<% end %>
    	</tbody>
    </table>
  </div>
</div>